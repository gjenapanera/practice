<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
		
	<bean id="snpHttpClientParams" class="org.apache.commons.httpclient.params.HttpClientParams">
		<property name="cookiePolicy" value="ignoreCookies"/>
		<property name="authenticationPreemptive" value="false"/>
	</bean>
	
	<bean id="snpHttpClient" class="org.apache.commons.httpclient.HttpClient">
	    <constructor-arg ref="snpHttpClientParams"/>
	</bean>
	
	<bean id="snpHttpConnectionManager" class="org.apache.commons.httpclient.MultiThreadedHttpConnectionManager">
	    <property name="params" ref="snpHttpConnectionManagerParams"/>
	</bean>

	<bean id="snpHttpConnectionManagerParams" class="org.apache.commons.httpclient.params.HttpConnectionManagerParams">
	    <property name="maxTotalConnections" value="${snp.max.total.connections:25}"/>
	    <property name="defaultMaxConnectionsPerHost" value="${snp.default.max.connections.perhost:15}"/>
	    <property name="connectionTimeout" value="${snp.connection.timeout.millis:10000}"/>
	    <property name="soTimeout" value="${snp.read.timeout.millis:10000}"/>
	</bean>

	<bean id="snpHttpClientFactory" class="org.springframework.http.client.CommonsClientHttpRequestFactory">
	    <constructor-arg ref="snpHttpClient"/>
	</bean>
	
	<bean id="snpRestTemplate" class="org.springframework.web.client.RestTemplate">
    	<constructor-arg ref="snpHttpClientFactory"/>
	</bean>
	
</beans>
